require "fileutils"
require "rubygems"
require "sequel"

db = File.expand_path('../../data/db.sqlite3', __FILE__)
FileUtils.mkdir_p(File.dirname(db))
DB = Sequel.sqlite(db)

DB.create_table :tickets do
  Integer :id, :primary_key => true
  String :link
  String :summary, :text => true
  String :assigned_to
  FalseClass :marked_for_review
  FalseClass :closed
end
